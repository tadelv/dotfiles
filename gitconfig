[user]
	name = Vid Tadel
	email = tadelv@gmail.com
[apply]
	whitespace = nowarn
[alias]
	co = checkout
	put = push origin HEAD
	track = !git-track
        lc = log ORIG_HEAD.. --stat --no-merges
[color]
	diff = auto
	status = auto
	branch = auto

[core]
	excludesfile = ~/.gitignore
	editor = "mate -w"
[mirror]
	summary = true
[github]
	user = tadelv
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = false
[push]
	default = tracking

[git-tmbundle]
	show-diff-check = yes
[includeIf "gitdir:~/development/work/"]
    path = ~/development/work/.gitconfig
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
